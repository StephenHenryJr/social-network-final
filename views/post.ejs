<%- include('partials/header') -%>

<div>

  <div>
    <h2><%= post.title %></h2>
    <img src="<%= post.image%>" />
    <div>
      <form action="/post/likePost/<%= post.id %>?_method=PUT" method="POST">
        <button type="submit">Like</button>
      </form>
      <h3>Likes: <%= post.likes %></h3>
      <%if(post.user == user.id){ %>
      <form action="/post/deletePost/<%= post.id %>?_method=DELETE" method="POST">
        <button type="submit">Delete</button>
      </form>
      <%}%>
      </div>
    </div>

    <div>
      <p><%= post.caption %></p>
    </div>

    <div>
      <h2>Add a comment:</h2>
      <form action="/comment/createComment/<%=post._id%>" method="POST">
        <div>
          <label for="comment">Comment</label>
          <input type="text" id="comment" name="comment">
        </div>
        <button type="submit">Submit</button>
      </form>
    </div>

    <h2>Comments:</h2>
    <ul>
      <% for(var i=0; i<comments.length; i++) {%>
      <li class="">
        <%= comments[i].createdByName%>:<br>
        <%= comments[i].comment%><br>
        <%= comments[i]._id%><br>
        <% if(user.id == comments[i].createdById) { %>
          <form action="/comment/deleteComment/<%= comments[i]._id %>?_method=DELETE" method="POST">
            <button type="submit">Delete</button>
          </form>
        <% } %> 
      </li>
      <% } %>
    </ul>

    <div>
      <a href="/profile">Return to Profile</a>
      <a href="/feed">Return to Feed</a>
    </div>
  </div>


  <%- include('partials/footer') -%>