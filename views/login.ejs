<%- include('partials/header') -%>

<main>
  <div class="min-h-screen flex justify-center items-center">
    <div class="w-fit p-4  rounded-lg bg-slate-50 shadow-xl">
      <h1 class="m-2 p-4 text-stone-400 text-center text-6xl font-mono"><a href="/profile">talkBx <span class="underline decoration-pink-400">MVC</span></a></h1>
      <h1 class="text-2xl font-bold">Login:</h1>
      <section>
        <!-- Will determine if there are any errors at the time of sign in -->
        <% if (locals.messages.errors) { %> <% messages.errors.forEach( el => { %>
        <div><%= el.msg %></div>
        <% }) %> <% } %> <% if (locals.messages.info) { %> <%
        messages.info.forEach( el => { %>
        <div><%= el.msg %></div>
        <% }) %> <% } %>
  
        <form action="/login" method="POST">
          <div class="flex flex-col my-3">
            <label for="exampleInputEmail1"></label>
            <input type="email" id="exampleInputEmail1" aria-describedby="emailHelp" name="email" placeholder="E-mail" class="p-0.5 border-2 border-stone-400 rounded" />
          </div>
          <div class="flex flex-col my-3">
            <label for="exampleInputPassword1"></label>
            <input type="password" id="exampleInputPassword1" name="password" placeholder="Password" class="p-0.5 border-2 border-stone-400 rounded" />
          </div>
          <button type="submit" class="p-0.5 mr-4 rounded bg-pink-400 shadow-md text-slate-50 text-xl  hover:bg-pink-500 font-thin">Log in</button>
        </form>

        <p class="my-1">Don't have an account? <a href="/signup" class="text-pink-500">Sign Up</a></p>
      </section>
    </div>
  </div>
  
</main>

<%- include('partials/footer') -%>